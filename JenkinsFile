pipeline {
    agent{
        docker { image 'python:3.9'}
        }
    stages {
        stage('install dependencies') {
            steps {
                sh 'python -m pip install -r requirements.txt'
            }
            }
        stage('Test') {
            steps {
                    echo '////Testing pytests'
                    sh 'python Project.py test _Test_'
                    sh 'python Change_specialty.py test Change_specialty_Test'
                    sh 'python List_D.py test List_D_Test'
                    sh 'python appp.py test appp_Test'
                    sh 'python A_show_count.py test count_test'
                  }
         }
          }

    }
